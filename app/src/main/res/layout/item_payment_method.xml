<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:background="@drawable/bg_solid_gray_3_corner_7sdp_border_gray_4_1dp"
        android:layout_margin="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img_visa"
            app:layout_constraintEnd_toStartOf="@id/img_remove"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="**** **** **** 5967"
            android:textSize="@dimen/_15ssp"
            style="@style/CustomTextViewTheme_Regular"
            android:textColor="@color/black"
            android:gravity="start|center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="@dimen/_14sdp"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/img_remove"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:background="@drawable/bg_circle_red"
            android:src="@drawable/ic_basket"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:indeterminateTint="@color/yellow_dark"
            app:layout_constraintBottom_toBottomOf="@id/img_remove"
            app:layout_constraintEnd_toEndOf="@id/img_remove"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/img_remove"
            app:layout_constraintTop_toTopOf="@id/img_remove"
            tools:ignore="UnusedAttribute" />

        <ImageView
            android:id="@+id/img_visa"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_10sdp"
            android:src="@drawable/ic_visa"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>