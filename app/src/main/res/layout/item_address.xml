<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_18sdp"
        android:layoutDirection="rtl"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_1"
            style="@style/CustomTextViewTheme_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_half_circle_dull_red_corner_7sdp"
            android:gravity="start"
            android:lines="1"
            android:paddingEnd="@dimen/_120sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingBottom="@dimen/_24sdp"
            android:text="@string/ksa"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/tv_city"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6sdp"
            android:paddingStart="@dimen/_15sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:text="الرياض"
            style="@style/CustomTextViewTheme_Bold"
            app:layout_constraintStart_toStartOf="@id/tv_1"
            app:layout_constraintBottom_toBottomOf="@id/tv_1"
            tools:ignore="RtlCompat" />


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:indeterminateTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/img_remove"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/img_remove"
            app:layout_constraintStart_toStartOf="@id/img_remove"
            app:layout_constraintTop_toTopOf="@id/img_remove" />

        <ImageView
            android:id="@+id/img_remove"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/ic_basket_red"
            app:layout_constraintTop_toTopOf="@id/tv_1"
            android:padding="@dimen/_6sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_1"
            app:layout_constraintEnd_toEndOf="@id/tv_1"
            />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/ic_edit_button_red"
            app:layout_constraintTop_toTopOf="@id/tv_1"
            android:padding="@dimen/_7sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_1"
            app:layout_constraintEnd_toStartOf="@id/img_remove"
            />

        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_half_circle_gray_corner_7sdp"/>

        <TextView
            android:id="@+id/tv_district_111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الحي"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/CustomTextViewTheme_Bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_1"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/tv_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="اربع قطع"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            style="@style/CustomTextViewTheme_Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_district_111"
            app:layout_constraintTop_toTopOf="@id/tv_district_111"
            tools:ignore="RtlCompat" />

        <View
            android:id="@+id/view_2"
            android:layout_width="0dp"
            android:layout_height="1.35dp"
            android:background="@drawable/bg_line_1"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_district_111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



        <TextView
            android:id="@+id/tv_receiver_name_111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم المستلم"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/CustomTextViewTheme_Bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_2"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/tv_receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="اربع قطع"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            style="@style/CustomTextViewTheme_Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_receiver_name_111"
            app:layout_constraintTop_toTopOf="@id/tv_receiver_name_111"
            tools:ignore="RtlCompat" />

        <View
            android:id="@+id/view_3"
            android:layout_width="0dp"
            android:layout_height="1.35dp"
            android:background="@drawable/bg_line_1"
            android:layout_marginTop="@dimen/_6sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_receiver_name_111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <TextView
            android:id="@+id/tv_receiver_phone_111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم جوال المستلم"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/_8sdp"
            android:textSize="@dimen/_11ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            style="@style/CustomTextViewTheme_Bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_3"
            tools:ignore="RtlCompat" />


        <TextView
            android:id="@+id/tv_receiver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:text="اربع قطع"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            style="@style/CustomTextViewTheme_Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_receiver_phone_111"
            app:layout_constraintTop_toTopOf="@id/tv_receiver_phone_111"
            tools:ignore="RtlCompat" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>