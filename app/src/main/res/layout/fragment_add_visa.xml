<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_410sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:background="@android:color/transparent"
        android:layoutDirection="rtl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".AddVisaFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_390sdp"
            android:background="@drawable/bg_solid_white_corner_22sdp"
            android:id="@+id/cl_root"
            android:paddingTop="@dimen/_32sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_390sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_1">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_2"
                        style="@style/CustomTextViewTheme_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="@string/visa_owner_name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <EditText
                        android:id="@+id/et_name"
                        style="@style/CustomTextViewTheme_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/bg_solid_gray_corner_7sdp"
                        android:gravity="right|center"
                        android:hint="@string/client_info"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_2"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_2" />


                    <TextView
                        android:id="@+id/tv_3"
                        style="@style/CustomTextViewTheme_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="@string/card_no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_name" />


                    <EditText
                        android:id="@+id/et_number"
                        style="@style/CustomTextViewTheme_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_solid_gray_corner_7sdp"
                        android:gravity="right|center"
                        android:hint="@string/card_no"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:maxLength="19"
                        android:inputType="number"
                        android:textColorHint="@color/gray_2"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.486"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_3" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/gl_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <TextView
                        android:id="@+id/tv_4"
                        style="@style/CustomTextViewTheme_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="@string/card_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_number" />


                    <EditText
                        android:id="@+id/et_date"
                        style="@style/CustomTextViewTheme_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/bg_solid_gray_corner_7sdp"
                        android:gravity="right|center"
                        android:hint="@string/card_date"
                        android:inputType="date"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_2"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/gl_1"
                        app:layout_constraintTop_toBottomOf="@id/tv_4" />

                    <TextView
                        android:id="@+id/tv_5"
                        style="@style/CustomTextViewTheme_Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:gravity="center"
                        android:text="الكود السري"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="@id/gl_1"
                        app:layout_constraintTop_toTopOf="@id/tv_4" />


                    <EditText
                        android:id="@+id/et_password"
                        style="@style/CustomTextViewTheme_Medium"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_36sdp"
                        android:layout_marginHorizontal="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:background="@drawable/bg_solid_gray_corner_7sdp"
                        android:gravity="right|center"
                        android:hint="000"
                        android:inputType="number|none"
                        android:maxLength="3"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_2"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintEnd_toEndOf="@id/gl_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_5"
                        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>


            <TextView
                android:id="@+id/tv_add"
                style="@style/CustomTextViewTheme_Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:background="@drawable/bg_half_bottom_circle_blue_corner_22sdp"
                android:gravity="center"
                android:paddingVertical="@dimen/_9sdp"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="RtlCompat" />


           <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/blue"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/tv_add"
                app:layout_constraintEnd_toEndOf="@id/tv_add"
                app:layout_constraintStart_toStartOf="@id/tv_add"
                app:layout_constraintTop_toTopOf="@id/tv_add" />

            <TextView
                android:id="@+id/tv_1"
                style="@style/CustomTextViewTheme_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@null"
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/_64sdp"
            android:background="@drawable/bg_solid_white_strock_blue"
            android:layout_height="@dimen/_64sdp"
            android:src="@drawable/ic_visa_1"
            android:elevation="1dp"
            android:paddingHorizontal="@dimen/_8sdp"
            app:layout_constraintBottom_toTopOf="@id/cl_root"
            app:layout_constraintEnd_toEndOf="@id/cl_root"
            app:layout_constraintStart_toStartOf="@id/cl_root"
            app:layout_constraintTop_toTopOf="@id/cl_root" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>